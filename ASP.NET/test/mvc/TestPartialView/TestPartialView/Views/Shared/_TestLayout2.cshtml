<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Layout 2</title>
    <style>
* {
  color: #fff;
  font-size: 28px;
  font-weight: 300;
  box-sizing: border-box;
  font-family: 'Metrophobic', Arial, serif; font-weight: 400;
}

body {
    background-color: #323232;
    padding: 50px;
}

header, nav, section, aside, footer {
    text-align: center;
    background-color: #666666;
    border-radius: 5px;
    padding: 50px;
}

header, footer {
    width: 100%;
    padding: 50px;
}

header {
    margin-bottom: 50px;
}

nav, aside {
    width: 25%;
}

nav {
    float: left;
}

section {
    padding:5px;
    margin-top:5px;
    float: left;
    width: calc(50% - 100px);
    margin: 0 50px 50px 50px;
}

aside {
    margin-top:5px;
    padding:5px;
    text-align:center;
    font-style:italic;
    float: right;
}

footer {
    padding:5px;
    text-align:center;
    font-weight:bold;
    clear: both;
}
    </style>
</head>
<body>
    <header>
        @RenderSection("HeaderSection")
    </header>
    <nav>
        @RenderSection("LeftSection")
    </nav>
    <section>
        @RenderBody()
    </section>
    <aside>
        @RenderSection("RightSection")
    </aside>
    <footer>
        @if (IsSectionDefined("FooterSection"))
        {
            @RenderSection("FooterSection")
        }
        else
        {
            <span>Default footer</span>
        }
    </footer>
</body>
</html>