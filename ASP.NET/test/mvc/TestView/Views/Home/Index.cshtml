@using System.Web.UI.HtmlControls
@model TestView.Models.ViewResponse

@{
    Layout = null;
}

@{
    var handlingController = this.ViewContext.RouteData.Values["controller"].ToString();
    var requestedController = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset = "utf-8"/>
        <meta name="viewport" content="width=device-width" />
        <title>Test View</title>
    </head>
    <body>
        handlingController = @Html.Raw(handlingController)<br />
        requestedController = @Html.Raw(requestedController)
        <hr />
        @using (Html.BeginForm())
        {
            <p>StringFieldI: @Html.TextBoxFor(x => x.StringFieldI)</p>
            <input type="submit" value="Submit" />
        }
        <hr />
        @Html.ActionLink("Test1", "Index", "Test1")
        @Html.ActionLink("Test2", "Index", "Test2")
    </body>
</html>
