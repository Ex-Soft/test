    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ConsoleApp/bin/Debug/net6.0/ConsoleApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ConsoleApp",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Launch (console generic host)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build generic host",
            "program": "${workspaceFolder}/ConsoleAppGenericHost/bin/Debug/net6.0/ConsoleAppGenericHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ConsoleAppGenericHost",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Pure console/Generic Host",
            "configurations": [".NET Core Launch (console)", ".NET Core Launch (console generic host)"]
        }
    ]
}